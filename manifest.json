{
    "manifest_version": 2,
    "name": "Alt Tabs",
    "version": "0.1",

    "permissions": [
        "tabs"
    ],

    "browser_action": {
        "default_icon": "images/icon.png",
        "default_title": "Alt Tabs"
    },

    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["jquery.min.js","content.js"]
        }
      ],

    "background": {
        "scripts": ["background.js"]
    },

    "commands":{
        "toggle-tabs-switching": {
            "suggested_key": {
                "default": "Alt+Q",
                "mac": "Alt+Q"
              },
            "description": "Toggle tabs switching"
        }
    }
    
    
}